//- Include config.pug file that holds all variables
block config
  include ../helpers/config

  //- Mixins - reusable code snippets
  include ../helpers/mixins


doctype html
html(lang="en")

  //- head.pug template
  include head

  if isHeaderSpecial
    include headerCheckout
  else
    include offCanvas
    include header

  
  // Body
  body

    main
      block content

    include footer

    .site-backdrop
    
    // JavaScript (jQuery) libraries, plugins and custom scripts
    script(src='js/vendor.min.js')
    script(src='js/scripts.min.js')
